<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.NewsfeedFragment">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/appbar_newsfeed">

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/newsfeed_icon"
                style="@style/Widget.AppCompat.ActionButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_format_align_left_24" />

            <ImageButton
                android:id="@+id/search_icon"
                style="@style/Widget.AppCompat.ActionButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/ic_search_black_24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="75dp" />

            <ImageButton
                android:id="@+id/profile_icon"
                style="@style/Widget.AppCompat.ActionButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_perm_identity_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="172dp" />

            <ImageButton
                android:id="@+id/notification_icon"

                style="@style/Widget.AppCompat.ActionButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"

                android:src="@drawable/ic_baseline_notifications_none_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="266dp" />

            <ImageButton
                android:id="@+id/addImage_icon"

                style="@style/Widget.AppCompat.ActionButton"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:layout_weight="1"
                android:src="@drawable/ic_baseline_insert_photo_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="339dp" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_newsfeed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/newsfeed_bg_black"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp" />
</LinearLayout>